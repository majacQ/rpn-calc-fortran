{
  "version": 6,

"configurePresets": [
{
  "name": "default",
  "binaryDir": "${sourceDir}/build",
  "cacheVariables": {
    "CMAKE_COMPILE_WARNING_AS_ERROR": true,
    "CMAKE_LINK_WARNING_AS_ERROR": true
  },
  "environment": {
    "CTEST_PARALLEL_LEVEL": "0",
    "CTEST_NO_TESTS_ACTION": "error"
  }
}
],
"buildPresets": [
  {
    "name": "default",
    "configurePreset": "default"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "default",
  "output": {
    "outputOnFailure": true,
    "verbosity": "verbose"
  },
  "execution": {
    "noTestsAction": "error",
    "scheduleRandom": true,
    "stopOnFailure": false,
    "timeout": 60
  }
}
],
"workflowPresets": [
  {
    "name": "default",
    "steps": [
      {
        "type": "configure",
        "name": "default"
      },
      {
        "type": "build",
        "name": "default"
      },
      {
        "type": "test",
        "name": "default"
      }
    ]
  }
]
}
